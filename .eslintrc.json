{
  "env": {
    "browser": true,
    "es6":  true,
    "node": true
  },
  "extends": [
    "redtn",
    "plugin:import/errors"
  ],
  "globals": {
    "M": "readonly"
  },
  "parser": "babel-eslint",
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "extensions": [".hbs", ".js", ".json", ".scss", ".css"],
            "modules": ["node_modules", "./"]
          }
        }
      }
    }
  }
}
